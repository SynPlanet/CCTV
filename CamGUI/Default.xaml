<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Cam">
    <controls:SlotSize x:Key="slotSize"/>
    <controls:SlotFontSize x:Key="slotFontSize"/>
    <controls:GeneralButtonSize x:Key="generalButtonSize"/>
    <controls:GeneralListBoxSize x:Key="generalListBoxSize"/>
    <controls:JoystickWidthConverter x:Key="joystickWidthConverter"/>
    <controls:TabItemBorderConverter x:Key="tabItemBorderConverter"/>
    <controls:JoystickButtonStateConverter x:Key="joystickButtonStateConverter"/>
    <controls:PortConverter x:Key="portConverter"/>
    <SolidColorBrush x:Key="BackgroundWindowBrush" Color="#FFC6D9F1"/>
    <SolidColorBrush x:Key="MonitorBorderBrush" Color="#FF385D8A"/>
    <SolidColorBrush x:Key="ElementBorderBrush" Color="#FF1F497D"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#FF4F81BD"/>
    <SolidColorBrush x:Key="BackgroundElementsBrush" Color="#FF8EB4E3"/>
    <SolidColorBrush x:Key="BackgroundActiveElementsBrush" Color="#FF376092"/>
    <SolidColorBrush x:Key="ActiveMonitorBorderBrush" Color="#FFC00000"/>
    <SolidColorBrush x:Key="WhiteTextBrush" Color="#FFF1F6FB"/>
    <SolidColorBrush x:Key="DarkTextBrush" Color="#FF1F497D"/>
    <Thickness x:Key="BorderThicknessElement">4</Thickness>
    <Thickness x:Key="BorderThicknessMonitor">3</Thickness>
    <Thickness x:Key="BorderThicknessPanel">2</Thickness>
    <Thickness x:Key="BorderThicknessPanel1">2,0</Thickness>
    <Style x:Key="HeaderTextBaseStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource HeaderTextBaseStyle}" >
        <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
        <Setter Property="FontSize" Value="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=Window, Mode=FindAncestor}, Converter={StaticResource slotFontSize}, Path=ActualWidth}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode= Self}, Path=IsEnabled}" Value="False">
                <Setter Property="Foreground" Value="Gray"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="WhiteTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource WhiteTextBrush}"/>
        <Setter Property="FontSize" Value="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=Window, Mode=FindAncestor}, Converter={StaticResource slotFontSize}, Path=ActualWidth}" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style x:Key="SlotStyle" TargetType="RadioButton">
        <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=Window, Mode=FindAncestor}, Converter={StaticResource slotSize}, Path=ActualWidth}"/>
        <Setter Property="Height" Value="43"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border BorderThickness="{StaticResource BorderThicknessElement}" BorderBrush="{StaticResource ButtonBorderBrush}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource BackgroundElementsBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=RadioButton, Mode=FindAncestor},Path=IsChecked}" Value="true">
                                        <Setter Property="Background" Value="{StaticResource BackgroundActiveElementsBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Style="{StaticResource WhiteTextStyle}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ButtonBaseStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border BorderThickness="{StaticResource BorderThicknessElement}" BorderBrush="{StaticResource ButtonBorderBrush}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{StaticResource BackgroundElementsBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=Button, Mode=FindAncestor},Path=IsPressed}" Value="true">
                                            <Setter Property="Background" Value="{StaticResource BackgroundActiveElementsBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <ContentPresenter/>
                        </Border>
                        <Grid>
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=Button, Mode=FindAncestor},Path=IsEnabled}" Value="false">
                                            <Setter Property="Background" Value="#55000000"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Margin="5"  Text="{Binding}" FontSize="17"  Style="{StaticResource WhiteTextStyle}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="AdminButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border BorderThickness="{StaticResource BorderThicknessElement}" BorderBrush="{StaticResource ButtonBorderBrush}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource BackgroundElementsBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=Button, Mode=FindAncestor},Path=IsPressed}" Value="true">
                                        <Setter Property="Background" Value="{StaticResource BackgroundActiveElementsBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Style="{StaticResource WhiteTextStyle}" Margin="5,0"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Style="{StaticResource WhiteTextStyle}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="GeneralButtonStyle" TargetType="Button"  BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=Window, Mode=FindAncestor}, Converter={StaticResource generalButtonSize}, Path=ActualWidth}"/>
    </Style>
    <Style x:Key="ListStyle" TargetType="ListBox">
        <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=Window, Mode=FindAncestor}, Converter={StaticResource generalListBoxSize}, Path=ActualWidth}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Border Background="{TemplateBinding ContentControl.Background}">
                        <StackPanel IsItemsHost="True" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border BorderBrush="{StaticResource ButtonBorderBrush}" BorderThickness="{StaticResource BorderThicknessElement}" Margin="5" Height="43">
                                    <ContentPresenter/>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource BackgroundElementsBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=IsChecked}" Value="true">
                                                    <Setter Property="Background" Value="{StaticResource BackgroundActiveElementsBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Name}" Style="{StaticResource WhiteTextStyle}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="AddCameraStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <DockPanel>
                        <Image  Margin="3">
                            <Image.Source>
                                <DrawingImage>
                                    <DrawingImage.Drawing>
                                        <GeometryDrawing Brush="Transparent">
                                            <GeometryDrawing.Pen>
                                                <Pen Brush="{StaticResource WhiteTextBrush}" Thickness="3"/>
                                            </GeometryDrawing.Pen>
                                            <GeometryDrawing.Geometry>
                                                <PathGeometry>
                                                    <PathFigureCollection>
                                                        <PathFigure StartPoint="0, 15" IsClosed="False" IsFilled="False">
                                                            <LineSegment Point="23,15"/>
                                                        </PathFigure>
                                                        <PathFigure StartPoint="12, 7" IsClosed="False" IsFilled="False">
                                                            <LineSegment Point="26,15"/>
                                                            <LineSegment Point="12,23"/>
                                                        </PathFigure>
                                                        <PathFigure StartPoint="15, 0" IsClosed="False" IsFilled="False">
                                                            <LineSegment Point="26,0"/>
                                                            <LineSegment Point="30,1"/>
                                                            <LineSegment Point="30,29"/>
                                                            <LineSegment Point="26,30"/>
                                                            <LineSegment Point="15,30"/>
                                                        </PathFigure>
                                                    </PathFigureCollection>
                                                </PathGeometry>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingImage.Drawing>
                                </DrawingImage>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding}" Style="{StaticResource WhiteTextStyle}" Margin="14,0"/>
                    </DockPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="RemoveCameraStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <DockPanel>
                        <Image DockPanel.Dock="Right"  Margin="3">
                            <Image.Source>
                                <DrawingImage>
                                    <DrawingImage.Drawing>
                                        <GeometryDrawing Brush="Transparent">
                                            <GeometryDrawing.Pen>
                                                <Pen Brush="{StaticResource WhiteTextBrush}" Thickness="3"/>
                                            </GeometryDrawing.Pen>
                                            <GeometryDrawing.Geometry>
                                                <PathGeometry>
                                                    <PathFigureCollection>
                                                        <PathFigure StartPoint="0, 15" IsClosed="False" IsFilled="False">
                                                            <LineSegment Point="23,15"/>
                                                        </PathFigure>
                                                        <PathFigure StartPoint="12, 7" IsClosed="False" IsFilled="False">
                                                            <LineSegment Point="26,15"/>
                                                            <LineSegment Point="12,23"/>
                                                        </PathFigure>
                                                        <PathFigure StartPoint="15, 0" IsClosed="False" IsFilled="False">
                                                            <LineSegment Point="4,0"/>
                                                            <LineSegment Point="0,1"/>
                                                            <LineSegment Point="0,29"/>
                                                            <LineSegment Point="4,30"/>
                                                            <LineSegment Point="15,30"/>
                                                        </PathFigure>
                                                    </PathFigureCollection>
                                                </PathGeometry>
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingImage.Drawing>
                                </DrawingImage>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding}" Style="{StaticResource WhiteTextStyle}" Margin="10,0"/>
                    </DockPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="MonitorBorderStyle" TargetType="Border">
        <Setter Property="Margin" Value="3"/>
        <Setter Property="BorderBrush" Value="{StaticResource MonitorBorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessMonitor}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=IsChecked}" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource ActiveMonitorBorderBrush}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="MonitorImageBorderStyle" TargetType="Border">
        <Setter Property="Margin" Value="1"/>
        <Setter Property="Background" Value="Black"/>
    </Style>
    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border BorderBrush="{StaticResource ElementBorderBrush}" BorderThickness="{StaticResource BorderThicknessPanel}" Margin="3" Padding="0,5">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource WhiteTextBrush}"/> 
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding  RelativeSource={RelativeSource AncestorLevel=1, AncestorType= TextBox, Mode= FindAncestor }, Path=IsEnabled}" Value="False">
                                        <Setter Property="Background" Value="{StaticResource BackgroundElementsBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="TabControlStyle" TargetType="TabControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Border BorderBrush="{StaticResource ElementBorderBrush}" BorderThickness="2,2,0,2">
                        <DockPanel >
                             <TabPanel Height="auto" DockPanel.Dock="Top" IsItemsHost="True" KeyboardNavigation.TabIndex="1"/>
                            <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent" Margin="4"/>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="TabItem">
                    <Setter Property="BorderThickness" Value="0,0,2,2" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Background="{TemplateBinding Background}"  BorderBrush="{StaticResource ElementBorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Height="40" MinWidth="50">
                                    <ContentPresenter ContentSource="Header" RecognizesAccessKey="True" Tag="{TemplateBinding FontWeight}">
                                        <ContentPresenter.ContentTemplate>
                                            <DataTemplate>
                                                <TextBlock FontWeight="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=ContentPresenter, Mode=FindAncestor},Path=Tag}"  TextAlignment="Center" VerticalAlignment="Center" Text="{Binding}" Style="{StaticResource HeaderTextBaseStyle}" Margin="5"/>
                                            </DataTemplate>
                                        </ContentPresenter.ContentTemplate>
                                    </ContentPresenter>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected"  Value="True">
                                        <Setter Property="Panel.Background" Value="Transparent" />
                                        <Setter Property="TabItem.FontWeight" Value="Bold" />
                                        <Setter Property="TabItem.BorderThickness" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Converter={StaticResource tabItemBorderConverter}}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="PasswordBox"  TargetType="PasswordBox">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border Background="{StaticResource WhiteTextBrush}"  BorderBrush="{StaticResource ElementBorderBrush}" BorderThickness="{StaticResource BorderThicknessPanel}" Margin="3" Padding="0,5">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ToggleButtonStyle"  TargetType="ToggleButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Background="{StaticResource BackgroundElementsBrush}"  BorderThickness="{StaticResource BorderThicknessElement}" BorderBrush="{StaticResource ButtonBorderBrush}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <DockPanel>
                        <Image DockPanel.Dock="Left" Width="25" Height="25" Margin="5">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source">
                                        <Setter.Value>
                                            <DrawingImage>
                                                <DrawingImage.Drawing>
                                                    <GeometryDrawing Brush="{StaticResource WhiteTextBrush}">
                                                        <GeometryDrawing.Pen>
                                                            <Pen Brush="{StaticResource ButtonBorderBrush}" Thickness="2"/>
                                                        </GeometryDrawing.Pen>
                                                        <GeometryDrawing.Geometry>
                                                            <PathGeometry>
                                                                <PathGeometry.Figures>
                                                                    <PathFigure StartPoint="0 0" IsFilled="True" IsClosed="True">
                                                                        <LineSegment Point="12 0"/>
                                                                        <LineSegment Point="12 12"/>
                                                                        <LineSegment Point="0 12"/>
                                                                    </PathFigure>
                                                                </PathGeometry.Figures>
                                                            </PathGeometry>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingImage.Drawing>
                                            </DrawingImage>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=ToggleButton, Mode=FindAncestor},Path=IsChecked}" Value="true">
                                            <Setter Property="Source">
                                                <Setter.Value>
                                                    <DrawingImage>
                                                        <DrawingImage.Drawing>
                                                            <DrawingGroup>
                                                                <GeometryDrawing Brush="{StaticResource WhiteTextBrush}">
                                                                    <GeometryDrawing.Pen>
                                                                        <Pen Brush="{StaticResource ButtonBorderBrush}" Thickness="2"/>
                                                                    </GeometryDrawing.Pen>
                                                                    <GeometryDrawing.Geometry>
                                                                        <PathGeometry>
                                                                            <PathGeometry.Figures>
                                                                                <PathFigure StartPoint="0 0" IsFilled="True" IsClosed="True">
                                                                                    <LineSegment Point="13 0"/>
                                                                                    <LineSegment Point="13 13"/>
                                                                                    <LineSegment Point="0 13"/>
                                                                                </PathFigure>
                                                                            </PathGeometry.Figures>
                                                                        </PathGeometry>
                                                                    </GeometryDrawing.Geometry>
                                                                </GeometryDrawing>
                                                                <GeometryDrawing Brush="{StaticResource WhiteTextBrush}">
                                                                    <GeometryDrawing.Pen>
                                                                        <Pen Brush="{StaticResource ButtonBorderBrush}" Thickness="1"/>
                                                                    </GeometryDrawing.Pen>
                                                                    <GeometryDrawing.Geometry>
                                                                        <PathGeometry>
                                                                            <PathGeometry.Figures>
                                                                                <PathFigure StartPoint="2 6" IsFilled="False" IsClosed="False">
                                                                                    <LineSegment Point="3 6"/>
                                                                                    <LineSegment Point="4 7"/>
                                                                                    <LineSegment Point="5 9"/>
                                                                                    <LineSegment Point="6 12"/>
                                                                                    <LineSegment Point="7 4"/>
                                                                                    <LineSegment Point="9 0"/>
                                                                                </PathFigure>
                                                                            </PathGeometry.Figures>
                                                                        </PathGeometry>
                                                                    </GeometryDrawing.Geometry>
                                                                </GeometryDrawing>
                                                            </DrawingGroup>
                                                        </DrawingImage.Drawing>
                                                    </DrawingImage>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock Text="{Binding}" FontSize="17"  Style="{StaticResource WhiteTextStyle}"/>
                    </DockPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <DrawingImage x:Key="LampOff">
        <DrawingImage.Drawing>
            <GeometryDrawing Brush="Transparent">
                <GeometryDrawing.Pen>
                    <Pen Brush="#FF953735" Thickness="2"/>
                </GeometryDrawing.Pen>
                <GeometryDrawing.Geometry>
                    <EllipseGeometry RadiusX="7" RadiusY="7"/>
                </GeometryDrawing.Geometry>
            </GeometryDrawing>
        </DrawingImage.Drawing>
    </DrawingImage>
    <DrawingImage x:Key="LampOn">
        <DrawingImage.Drawing>
            <GeometryDrawing Brush="#FFC0504D">
                <GeometryDrawing.Pen>
                    <Pen Brush="#FF953735" Thickness="2"/>
                </GeometryDrawing.Pen>
                <GeometryDrawing.Geometry>
                    <EllipseGeometry RadiusX="7" RadiusY="7"/>
                </GeometryDrawing.Geometry>
            </GeometryDrawing>
        </DrawingImage.Drawing>
    </DrawingImage>
    <DoubleAnimation x:Key="joystickAnimation" From="1" To="0" Duration="0:0:2" AutoReverse="False"/>
    <Style x:Key="ListBoxItemStyle"  TargetType="ListBoxItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem" >
                    <Border Padding="2" CornerRadius="5" BorderThickness="{StaticResource BorderThicknessElement}">
                        <ContentPresenter>
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Name}" Style="{StaticResource WhiteTextStyle}" FontSize="15"  TextAlignment="Left" Margin="5,0"/>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#01FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#01FFFFFF"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=ListBoxItem, Mode=FindAncestor}, Path=IsMouseOver}" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource ElementBorderBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=ListBoxItem, Mode=FindAncestor}, Path=IsSelected}" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource ButtonBorderBrush}"/>
                                        <Setter Property="Background" Value="{StaticResource BackgroundActiveElementsBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ComboBoxStyle"  TargetType="ComboBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=ComboBox, Mode=FindAncestor}, Path=ActualHeight, Mode=OneWay}"/>
                        </Grid.ColumnDefinitions>
                        <ContentPresenter Content="{TemplateBinding SelectionBoxItem}" >
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource WhiteTextBrush}">
                                        <TextBlock Text="{Binding}"  Foreground="{StaticResource DarkTextBrush}" Style="{StaticResource WhiteTextStyle}"  VerticalAlignment="Center"  TextAlignment="Left" Margin="5,0"/>
                                    </Border>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                        <TextBox x:Name="PART_EditableTextBox">
                            <TextBox.Style>
                                <Style BasedOn="{StaticResource TextBoxStyle}" TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsReadOnly" Value="true">
                                            <Setter Property="Visibility" Value="Hidden"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <ToggleButton Grid.Column="2" IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press">
                            <ToggleButton.Template>
                                <ControlTemplate>
                                    <Border CornerRadius="5" BorderBrush="{StaticResource ElementBorderBrush}" BorderThickness="{StaticResource BorderThicknessPanel}" Margin="2.5">
                                        <Image Margin="7,10,7,7" Stretch="Fill">
                                            <Image.Source>
                                                <DrawingImage>
                                                    <DrawingImage.Drawing>
                                                        <GeometryDrawing Brush="{StaticResource ElementBorderBrush}">
                                                            <GeometryDrawing.Geometry>
                                                                <PathGeometry>
                                                                    <PathFigure StartPoint="0 0" IsClosed="True" IsFilled="True">
                                                                        <LineSegment  Point="4 0"/>
                                                                        <LineSegment  Point="2 2"/>
                                                                    </PathFigure>
                                                                </PathGeometry>
                                                            </GeometryDrawing.Geometry>
                                                        </GeometryDrawing>
                                                    </DrawingImage.Drawing>
                                                </DrawingImage>
                                            </Image.Source>
                                        </Image>
                                        <Border.Style>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="Background" Value="#01FFFFFF"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType= ToggleButton, Mode=FindAncestor}, Path=IsChecked}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource BackgroundElementsBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <Popup AllowsTransparency="True"  Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" Focusable="False" PopupAnimation="Slide" Margin="3,-8,-3,8">
